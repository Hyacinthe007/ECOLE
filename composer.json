{
    "name": "ecole-mandroso/gestion-scolaire",
    "description": "Système de gestion scolaire - École Mandroso",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    }
}
